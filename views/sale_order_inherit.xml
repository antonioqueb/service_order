<odoo>
  <record id="view_sale_order_button_service" model="ir.ui.view">
    <field name="name">sale.order.form.service.buttons</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form"/>
    <field name="arch" type="xml">
      <!-- BotÃ³n crear en header -->
      <xpath expr="//header" position="inside">
        <button name="action_create_service_order"
                string="Crear Servicio"
                type="object"
                class="btn-secondary"
                groups="sales_team.group_sale_salesman"/>
      </xpath>

      <!-- Smart button en button_box -->
      <xpath expr="//div[@name='button_box']" position="inside">
        <button name="action_view_service_orders"
                type="object"
                class="oe_stat_button"
                icon="fa-wrench"
                groups="sales_team.group_sale_salesman"
                invisible="service_order_count == 0">
          <field name="service_order_count" widget="statinfo" string="Servicios"/>
        </button>
      </xpath>
    </field>
  </record>
</odoo>