<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <record id="account_invoice_lines_inline_cretibm" model="ir.ui.view">
    <field name="name">account.move.form.invoice_lines.cretibm</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <!-- Dentro de la pestaña Invoice Lines,
           justo después de product_id en el list editable -->
      <xpath expr="//page[@id='invoice_tab']//list/field[@name='product_id']"
             position="after">
        <field name="c"/>
        <field name="r"/>
        <field name="e"/>
        <field name="t"/>
        <field name="i"/>
        <field name="b"/>
        <field name="m"/>
      </xpath>
    </field>
  </record>
</odoo>
